{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": true
  },
  "exclude": [
    "vendor",
    "var",
    "translations",
    "tests",
    "templates",
    "src",
    "public",
    "node_modules",
    "data",
    "bin"
  ]
}