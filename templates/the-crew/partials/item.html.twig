<li class="box-grid__item">
    <article class="box box--person" tabindex="0">
        <div class="person">
            <figure class="person__photo {{ flippedAvatar ? 'person__photo--flipper' : '' }}">
                {% if flippedAvatar %}
                    <div class="person__flip">
                {% endif %}
                    {% if isLazy %}
                        <img class="js-lazy-loading"
                             src="{{ asset('build/images/empty.gif') }}"
                             data-src="{{ avatar }}"
                             alt="{{ name }}">
                        {% if flippedAvatar %}
                            <img class="js-lazy-loading"
                                 src="{{ asset('build/images/empty.gif') }}"
                                 data-src="{{ flippedAvatar }}"
                                 alt="">
                        {% endif %}
                    {% else %}
                        <img src="{{ avatar }}" alt="{{ name }}">
                        {% if flippedAvatar %}
                            <img src="{{ flippedAvatar }}" alt="">
                        {% endif %}
                    {% endif %}
                {% if flippedAvatar %}
                    </div>
                {% endif %}
            </figure>
            <div class="person__info">
                <h2 class="person__header">{{ name }}</h2>
                <span class="person__title">{{ title }}</span>
                {% if url is defined %}
                    <a href="{{ url }}" class="person__link">
                        {% if urlLabel is defined %}
                            {{ urlLabel }}
                        {% else %}
                            {{ url }}
                        {% endif %}
                    </a>
                {% endif %}
            </div>
        </div>
    </article>
</li>