<li class="box-grid__item">
    <article class="box screening {{ not active ? 'screening--inactive' : '' }}">
        {% if image %}
            <figure class="box__image-container">
                <div class="embed-16-9">
                    <img data-src="{{ asset('build/images/empty.gif') }}"
                         src="{{ image }}"
                         alt="{{ name }} - {{ venueName }}"
                         class="box__image js-lazy-loading" />
                </div>
            </figure>
        {% endif %}
        <h3 class="screening__title box__subtitle">
            {{ name }}
        </h3>
        {% if venueLink %}
            <a href="{{ venueLink }}" target="_blank" class="screening__link" rel="noopener noreferer">
        {% endif %}
                <span class="screening__icon-text">
                    <svg class="screening__icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M12 4C9.24 4 7 6.24 7 9c0 2.85 2.92 7.21 5 9.88 2.11-2.69 5-7 5-9.88 0-2.76-2.24-5-5-5zm0 7.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" opacity=".3"/><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zM7 9c0-2.76 2.24-5 5-5s5 2.24 5 5c0 2.88-2.88 7.19-5 9.88C9.92 16.21 7 11.85 7 9z"/><circle cx="12" cy="9" r="2.5"/></svg>
                    <span class="screening__icon-text-label">
                        {{ venueName }}
                    </span>
                </span>
        {% if venueLink %}
            </a>
        {% endif %}

        <span class="screening__icon-text">
            <svg class="screening__icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M5 8h14V6H5z" opacity=".3"/><path d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.11 0-1.99.9-1.99 2L3 20c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2zm-7 5h5v5h-5z"/></svg>
            <time class="screening__icon-text-label" datetime="{{ start|date("c") }}">
                {% if app.request.get('_locale') == 'bg' %}
                    {{ start|date("d.m.o") }}
                {% else %}
                    {{ start|date("d/m/o") }}
                {% endif %}
            </time>
        </span>

        {% if eventLink %}
            <a href="{{ eventLink }}" target="_blank" class="screening__link" rel="noopener noreferer">
                <span class="screening__icon-text">
                    {% if is_facebook_link(eventLink) %}
                        <img class="screening__icon js-lazy-loading"
                             src="{{ asset('build/images/empty.gif') }}"
                             data-src="{{ asset('build/images/icons/fb-logo-grey@2x.png') }}"
                             alt="">
                    {% else %}
                        <svg class="screening__icon" xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M17 7h-4v2h4c1.65 0 3 1.35 3 3s-1.35 3-3 3h-4v2h4c2.76 0 5-2.24 5-5s-2.24-5-5-5zm-6 8H7c-1.65 0-3-1.35-3-3s1.35-3 3-3h4V7H7c-2.76 0-5 2.24-5 5s2.24 5 5 5h4v-2zm-3-4h8v2H8z" opacity=".87"/></svg>
                    {% endif %}
                    <span class="screening__icon-text-label">
                        {{ 'more.info'|trans }}
                    </span>
                </span>
            </a>
        {% endif %}
    </article>
</li>