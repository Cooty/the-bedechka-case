<!doctype html>
{% spaceless %}
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}The Case Bedechka Website Admin{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>
<body class="bg-light">
    {% if(is_granted('ROLE_ADMIN')) %}
        {% include('admin/includes/header.html.twig') %}
    {% endif %}

    {% if(is_granted('ROLE_ADMIN') and app.request.get('_route') != 'admin_dashboard') %}
        {% include('admin/includes/sidebar.html.twig') %}
    {% endif %}

    <main class="main container-fluid h-100 {{ is_granted('ROLE_ADMIN') and app.request.get('_route') != 'admin_dashboard' ? 'container--with-sidebar' : '' }}">
        {% block main %}{% endblock %}
    </main>

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}
</body>
</html>
{% endspaceless %}