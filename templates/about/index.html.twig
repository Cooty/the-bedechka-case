{% extends 'base.html.twig' %}

{% set heroTitle = {'mainTitle': 'about.title'} %}
{% set heroContent = include('./includes/hero/title-and-subtitle.html.twig', heroTitle) %}

{% block title %}{{ 'about.title'|trans }} - {{ 'site.name'|trans }}{% endblock %}

{% block description %}
    {% include('./includes/meta-description.html.twig') with {
        'description': 'about'|trans({}, 'meta-descriptions')|raw|trim
    } only %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% for css in encore_entry_css_files('critical-path-subpages') %}
        <style>
            {{ get_asset_content(css)|raw }}
        </style>
    {% endfor %}

    {% include('./includes/hero/background-style.html.twig') with {'background': 'about'} only %}

    {% for css in encore_entry_css_files('yt') %}
        {% include('includes/async-css.html.twig') with {
            style_path: asset(css)
        } %}
    {% endfor %}
{% endblock %}

{% block main %}
    {% include('./includes/hero.html.twig') with {'content': heroContent} only %}
    <article class="box box--center-narrow box--tablet-big-gutter pull-over-hero">
        <div class="main-copy">
            {{ 'about.text'|trans({}, 'content')|raw }}
        </div>

        <div class="text-center mb-2">
            <a href="{{ path('screenings') }}" class="button">
                {{ 'screenings.cta'|trans }}
            </a>
        </div>

        {% include('./components/sub-header.html.twig') with {'text': 'trailer.header', 'priority': 3, 'classes': 'text-center mb-1'} only %}

        {% include('./components/youtube-embed.html.twig') with {'video': trailer} %}

    </article>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% for js in encore_entry_js_files('yt') %}
        <script src="{{ asset(js) }}" defer></script>
    {% endfor %}
{% endblock %}

{% block preconectLinks %}
    {{ parent() }}

    {% include('./includes/preconnect-prefetch-links.html.twig')
        with {'domain': 'https://ytimg.com'} only %}

    {% include('./includes/preconnect-prefetch-links.html.twig')
        with {'domain': 'https://www.youtube.com'} only %}

    {% include('./includes/preconnect-prefetch-links.html.twig')
        with {'domain': 'https://www.youtube-nocookie.com'} only %}

{% endblock preconectLinks %}