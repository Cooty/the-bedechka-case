{% if video %}
    <style>
        .lazy-loading-loaded.video-{{ video.id }},
        .lazy-loading-loaded.video-{{ video.id }}:before {
            background-image: url({{ video.thumbnails.mobile }});
        }

        @media screen and (min-width: 48rem) {
            .lazy-loading-loaded.video-{{ video.id }},
            .lazy-loading-loaded.video-{{ video.id }}:before {
                background-image: url({{ video.thumbnails.tablet }});
            }
        }

        @media screen and (min-width: 64rem) {
            .lazy-loading-loaded.video-{{ video.id }},
            .lazy-loading-loaded.video-{{ video.id }}:before {
                background-image: url({{ video.thumbnails.desktop }});
            }
        }
    </style>

    {% set classes = classes is defined ? classes : '' %}
    <a href="https://www.youtube.com/watch?v={{ video.id }}"
       data-id="{{ video.id }}"
       class="js-video-embed video-embed embed-16-9 js-lazy-loading {{ classes }} video-{{ video.id }}">
        <span class="visually-hidden">
            {% if app.request.get('_locale') == 'en' %}
                {{ video.title }}
            {% else %}
                {{ video.titleBg }}
            {% endif %}
        </span>
    </a>
{% endif %}