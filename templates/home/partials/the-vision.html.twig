<section class="story vision-offset-desktop">
    {% include('./components/section-header.html.twig') with {'text': 'vision.title', 'classes': 'story__header'} only %}

    <article class="box box--center vision">
        <h3 class="sub-header vision__header">
            {{ 'vision.subheader'|trans }}
        </h3>
        <div class="copy vision__intro">
            <div>
                <p>
                    <strong>{{ 'vision.intro.bold'|trans }}</strong>
                </p>
                <p>
                    {{ 'vision.intro'|trans }}
                </p>
            </div>
        </div>
        <figure class="vision__graphic">
            {# TODO: Just dummy markup - some more responsive, more flexible stuff here after we have final design #}
            <picture>
                <source srcset="{{ asset('build/the-vision-info-graphic-placeholder-desktop.png') }}" media="(min-width: 768px)">
                <img src="{{ asset('build/the-vision-info-graphic-placeholder-mobile.png') }}" alt="">
            </picture>
        </figure>
        <h3 class="sub-header vision__header">
            {{ 'protection.mechanisms'|trans }}
        </h3>
        <div class="box box--tablet-only vision__case">
            <div class="video">
                {% include('./components/video-embed.html.twig') with {
                    'url': 'https://www.youtube.com/watch?v=PegMHCQWls4',
                    'thumbnail': 'https://picsum.photos/400/225',
                    'alt': 'Sunset over the field / Залез над полето'}
                %}
            </div>
            <h4 class="box__subtitle">
                {{ 'thf.case.title'|trans }}
            </h4>
        </div>
        <div class="box box--tablet-only vision__case">
            <div class="video">
                {% include('./components/video-embed.html.twig') with {
                    'url': 'https://www.youtube.com/watch?v=MdmidVPid2',
                    'thumbnail': 'https://picsum.photos/400/225',
                    'alt': 'Life in the Jungle / Живот в джунглата'}
                %}
            </div>
            <h4 class="box__subtitle">
                Humans as Stewards of Nature and not a Disaster to it
            </h4>
        </div>
    </article>
</section>