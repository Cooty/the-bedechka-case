{% if link is defined %}
    <li class="news__item">
        <a href="{{ link }}" class="box">
            {% if title is defined %}
                <h3 class="box__subtitle">
                    {{ title }}
                </h3>
            {% endif %}
            {% if source is defined %}
                <small class="box__info">{{ source }}</small>
            {% endif %}
        </a>
    </li>
{% endif %}