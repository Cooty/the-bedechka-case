{% if background is defined %}

    {% set folder = 'build/header-footer-backgrounds/' %}
    {% spaceless %}


    <style>
        .hero {
            background-image: url({{ asset("#{folder}#{background}.webp") }});
        }

        .no-webp .hero {
            background-image: url({{ asset("#{folder}#{background}.jpg") }});
        }

        @media (min-width: 401px) {
            .hero {
                background-image: url({{ asset("#{folder}#{background}-mobile.webp") }});
            }

            .no-webp .hero {
                background-image: url({{ asset("#{folder}#{background}-mobile.jpg") }});
            }
        }

        @media (min-width: 1024px) {
            .hero {
                background-image: url({{ asset("#{folder}#{background}-desktop.webp") }});
            }

            .no-webp .hero {
                background-image: url({{ asset("#{folder}#{background}-desktop.jpg") }});
            }
        }
    </style>
    {% endspaceless %}

{% endif %}

{% if modifierCSSClassName is defined %}
    {% set modifierCSSClassNameOutput = " #{modifierCSSClassName}" %}
{% else %}
    {% set modifierCSSClassNameOutput = '' %}
{% endif %}

<header class="hero{{ modifierCSSClassNameOutput }}">
    {% if content is defined %}
        {{ content|raw }}
    {% endif %}
</header>